<div>
    <main>
        <div>
            {{> title data="Mac" big=true}}
            <hr>
            <section>
                <h1>{{name}}</h1>
                <h2>{{description}}</h2>
                <div>price:{{price}}</div>
                <b>{{category}}</b>
            </section>
            <hr>
            <section>
                <h3>Features</h3>
                <div>
                    {{#with features}}
                    <h4>processor:</h4>
                    <div>
                        {{#with processor}}
                        <div>brand: {{brand}}</div>
                        <div>model: {{model}}</div>
                        <div>speed: {{speed}}</div>
                        <div>cores: {{cores}}</div>
                        <div>cache: {{cache}}</div>
                        {{/with}}
                    </div>
                    <br>
                    <h4>memory:</h4>
                    <div>
                        {{#with memory}}
                        <div>type: {{type}}</div>
                        <div>size: {{size}}</div>
                        <div>speed: {{speed}}</div>
                        {{/with}}
                    </div>
                    <br>
                    <h4>storage:</h4>
                    <div>
                        {{#with storage}}
                        <div>type: {{type}}</div>
                        <div>size: {{size}}</div>
                        {{/with}}
                    </div>
                    <br>
                    <h4>display:</h4>
                    <div>
                        {{#with display}}
                        <div>size: {{size}}</div>
                        <div>resolution: {{resolution}}</div>
                        <div>technology: {{technology}}</div>
                        <div>color_space: {{color_space}}</div>
                        <div>brightness: {{brightness}}</div>
                        <div>refresh rate: {{refresh_rate}}</div>
                        {{/with}}
                    </div>
                    <br>
                    <h4>graphics:</h4>
                    <div>
                        {{#with graphics}}
                        <div>brand: {{brand}}</div>
                        <div>model: {{model}}</div>
                        <div>memory: {{memory}}</div>
                        {{/with}}
                    </div>
                    <br>
                    <h4>ports:</h4>
                    <div>
                        {{#each ports}}
                        <div>type: {{type}}</div>
                        <div>count: {{count}}</div>
                        <div>features:
                            <ul>
                                {{#each features}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <br>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>

            </section>


        </div>
    </main>


</div>