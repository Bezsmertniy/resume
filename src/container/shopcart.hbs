<main class="p-5">
    <header class="row mt-3">
        <div class="col-12">
            {{#with navigation}}
            <div class="card">
                <div class="card-body m-1">
                    <ul class="nav">
                        {{#each links}}
                        <li class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                            {{/each}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </header>

    <body>
        <div class="row">
            <div class="col-12 my-5">
                {{!-- Кошик --}}
                {{#with header}}
                <h1>{{title}}</h1>
                {{#with button}}
                <div class="mt-3">
                    <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                </div>
                {{/with}}
                {{/with}}
                <div class="my-5">
                    <hr>
                </div>
                {{!--goodsBlock --}}

                <div class="card mb-3">
                    <div class="row">
                        {{#with goodsBlock}}
                        <div>
                            {{#each this}}
                            <div class="col-md-12">
                                <img src="{{image}}" class="img-fluid rounded-start" alt="#">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">{{description}}</p>
                                    <div class="">
                                        {{#with buttons}}
                                        <div>
                                            {{#if isPrimary}}
                                            <button class="btn btn-primary rounded-pill">{{text}}</button>
                                            {{/if}}
                                            {{#if isDanger}}
                                            <button class="btn btn-danger rounded-pill">{{text}}</button>
                                            {{/if}}
                                        </div>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>

            </div>
        </div>
    </body>
    <div class="col-12 mt-5">
        <hr>
    </div>
    <footer>
        <div class="row">
            {{#each footer}}
            <div class="col-2 list-group">
                <ul class="nav flex-column">
                    {{#each this}}
                    <li class="nav-item my-1">
                        <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}} list-item" target="_blank">
                            {{text}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </footer>
</main>