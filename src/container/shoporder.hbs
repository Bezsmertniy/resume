<main class="p-5">
    <header class="row mt-3">
        <div class="col-12">
            {{#with navigation}}
            <div class="card">
                <div class="card-body m-1">
                    <ul class="nav">
                        {{#each links}}
                        <li class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                            {{/each}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </header>

    <body>
        <section class="mt-5">
            <div class="row">
                <div class="col-12 mb-5">
                    <h1>{{header}}</h1>
                </div>
                <div class="col-8 mt-3">
                    {{#with contacts_data}}
                    <h2>{{title}}</h2>
                    <div class="card-body my-3">
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-warning text-light me-3">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                    <form>
                        {{#with form}}
                        <div class="mb-3">
                            {{#with input}}
                            <div class="my-5">
                                <div class="row">
                                    {{#with surname}}
                                    <div class="col-6 mb-4">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                    {{#with name}}
                                    <div class="col-6">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                    {{#with phone}}
                                    <div class="col-6">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                    {{#with email}}
                                    <div class="col-6">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                        <div class="my-4">
                            <hr>
                        </div>
                        <div class="my-4">
                            {{#each switch}}
                            <div class="my-4">
                                <div class="form-check form-switch">
                                    <label class="form-check-label {{#if isActive}}{{/if}}">{{text}}</label>
                                    <input name="#" type="checkbox" class="form-check-input">
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        <div class="my-4">
                            <hr>
                        </div>
                        {{/with}}
                    </form>
                    {{/with}}
                    {{!-- Доставка --}}
                    <div>
                        {{#with delivery}}
                        <h2 class="mb-2">{{title}}</h2>
                        <div class="card mb-4">
                            <div class="card-body row">
                                {{#each select}}
                                <div class="col-6">
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        <div class="mt-4">
                            {{#each delivery_type}}
                            <div class="form-check my-2">
                                <label class="form-check-label">{{type}}</label>
                                <input name="#" type="radio" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        <div class="my-4">
                            <hr>
                        </div>
                        {{!-- Оплата --}}
                        <div class="mt-3">
                            {{#with payment}}
                            <h2 class="form-label">{{title}}</h2>
                            {{#each list}}
                            <div class="form-check my-3">
                                <label class="form-check-label">{{type}}</label>
                                <input name="#" type="radio" class="form-check-input">
                                <p class="mt-3">{{description}}</p>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        <div class="my-4">
                            <hr>
                        </div>
                        {{!-- Контактні дані --}}
                        <div>
                            {{#with contact}}
                            <h2>{{title}}</h2>
                            <form>
                                <div class="my-5">
                                    <div class="row">
                                        {{#with surname}}
                                        <div class="col-6 mb-4">
                                            <label for="#" class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        </div>
                                        {{/with}}
                                        {{#with name}}
                                        <div class="col-6">
                                            <label for="#" class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        </div>
                                        {{/with}}
                                        {{#with phone}}
                                        <div class="col-6">
                                            <label for="#" class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        </div>
                                        {{/with}}
                                        {{#with email}}
                                        <div class="col-6">
                                            <label for="#" class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        </div>
                                        {{/with}}
                                    </div>
                                </div>
                            </form>
                            {{/with}}
                        </div>
                        <div class="my-4">
                            <hr>
                        </div>
                        {{!-- Коментар --}}
                        <div>
                            {{#with coment}}
                            <label for="#" class="form-label">{{label}}</label>
                            <input class="form-control my-3" placeholder="{{placeholder}}">
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    <div class="my-4">
                        <hr>
                    </div>
                    {{!-- Купони--}}
                    <div>
                        {{#with coupon}}
                        <h2>{{title}}</h2>
                        <div class="mt-2">
                            {{#with select}}
                            <div>
                                {{#with availabel_coupon}}
                                <div class="col-12">
                                    <label class="form-label mt-3">{{label}}</label>
                                    <select class="form-select form-select-lg">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{/with}}
                            </div>
                            <div>
                                {{#with friend_coupon}}
                                <div class="col-12">
                                    <label class="form-label mt-3">{{label}}</label>
                                    <select class="form-select form-select-sm">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{/with}}
                            </div>
                            {{/with}}
                            {{!-- add--}}
                            <div class="mt-5">
                                {{#with add}}
                                <div class="my-3">
                                    {{#with friend}}
                                    <div class="mt-2">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                </div>
                                <div class="my-3">
                                    {{#with colleague}}
                                    <div class="mt-2">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                </div>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    <div class="my-4">
                        <hr>
                    </div>
                    {{!--quiz --}}
                    <div>
                        {{#with quiz}}
                        <h2>{{title}}</h2>
                        {{!-- Домоможи краще нам тебе зрозуміти --}}
                        <div>
                            {{#with preference}}
                            <div class="form-label my-3">{{title}}</div>
                            {{#each options}}
                            <div class="form-check my-2">
                                <label class="form-check-label">{{this}}</label>
                                <input name="#" type="radio" class="form-check-input">
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        {{!--your_expirience --}}
                        <div class="my-4">
                            {{#with your_expirience}}
                            <label for="#" class="form-label">{{label}}</label>
                            <input class="form-control">
                            {{/with}}
                        </div>
                        {{!--purchase_frequency --}}
                        <div>
                            {{#with purchase_frequency}}
                            <div class="col-12">
                                <label class="form-label">{{label}}</label>
                                <select class="form-select form-select">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{/with}}
                        </div>
                        {{!-- factors--}}
                        <div class="my-4">
                            {{#with factors}}
                            <div class="form-label my-3">{{title}}</div>
                            {{#each options}}
                            <div class="form-check my-2">
                                <label class="form-check-label">{{this}}</label>
                                <input name="#" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                </div>
                <div class="col-4">
                    <div class="card mt-3">
                        <div class="card-body">
                            {{#each action_block}}
                            <div class="mt-2">
                                {{#if isSuccess}}
                                <button class="btn btn-success text-center">{{text}}</button>
                                {{/if}}
                            </div>
                            <div class="my-3">
                                {{#if isDanger}}
                                <button class="btn btn-danger text-center">{{text}}</button>
                                {{/if}}
                            </div>
                            <div class="my-3">
                                {{#if isInfo}}
                                <button class="btn btn-info text-center">{{text}}</button>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="card mt-4">
                        <div class="card-body">
                            {{#with total}}
                            <strong class="card-title">{{title}}</strong>
                            <div class="mt-3">
                                {{#each item_list}}
                                <div class="my-2">
                                    {{name}}: {{price}}
                                </div>
                                {{/each}}
                            </div>
                            <div class="my-2">
                                <hr>
                            </div>
                            <div class="mt-4">
                                {{#each additional_info}}
                                <div class="my-1">
                                    {{text}}: {{value}}
                                </div>
                                {{/each}}
                            </div>
                            <div class="my-2">
                                <hr>
                            </div>
                            <div class="mt-3">
                                {{#with total_price}}
                                <div class="my-1">
                                    {{text}}: {{value}}
                                </div>
                                {{/with}}
                            </div>
                            <div class="my-2">
                                <hr>
                            </div>
                            <div>
                                {{#each button}}
                                <div class="my-3">
                                    {{#if isPrimary}}
                                    <button class="btn btn-primary text-center">{{text}}</button>
                                    {{/if}}
                                </div>
                                <div class="my-3">
                                    {{#if isOutline}}
                                    <button class="btn btn-outline-primary text-center">{{text}}</button>
                                    {{/if}}
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
    <div class="col-12 mt-5">
        <hr>
    </div>
    <footer>
        <div class="row">
            {{#each footer}}
            <div class="col-2 list-group">
                <ul class="nav flex-column">
                    {{#each this}}
                    <li class="nav-item my-1">
                        <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}} list-item" target="_blank">
                            {{text}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </footer>
</main>