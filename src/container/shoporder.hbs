<main class="p-5">
    <header class="row mt-3">
        <div class="col-12">
            {{#with navigation}}
            <div class="card">
                <div class="card-body m-1">
                    <ul class="nav">
                        {{#each links}}
                        <li class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                            {{/each}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </header>

    <body>
        <section class="mt-5">
            <div class="row">
                <div class="col-12 mb-5">
                    <h1>{{header}}</h1>
                </div>
                <div class="col-8 mt-3">
                    {{#with contacts_data}}
                    <h2>{{title}}</h2>
                    <div class="card-body my-3">
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-warning text-light me-3">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                    {{/with}}
                    <form>
                        {{#with form}}
                        <div class="mb-3">
                            {{#with input}}
                            <div class="mb-3">
                                {{#with surname}}
                                <div class="row">
                                    <div class="col-6">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                </div>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </form>
                </div>
            </div>
            </div>
        </section>
    </body>
</main>