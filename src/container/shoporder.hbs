<main class="p-5">
    <header class="row mt-3">
        <div class="col-12">
            {{#with navigation}}
            <div class="card">
                <div class="card-body m-1">
                    <ul class="nav">
                        {{#each links}}
                        <li class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                            {{/each}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </header>

    <body>
        <section class="mt-5">
            <div class="row">
                <div class="col-12 mb-5">
                    <h1>{{header}}</h1>
                </div>
                <div class="col-8 mt-3">
                    {{#with contacts_data}}
                    <h2>{{title}}</h2>
                    <div class="card-body my-3">
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-warning text-light me-3">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                    <form>
                        {{#with form}}
                        <div class="mb-3">
                            {{#with input}}
                            <div class="my-5">
                                <div class="row">
                                    {{#with surname}}
                                    <div class="col-6 mb-4">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                    {{#with name}}
                                    <div class="col-6">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                    {{#with phone}}
                                    <div class="col-6">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                    {{#with email}}
                                    <div class="col-6">
                                        <label for="#" class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                        <div class="my-4">
                            <hr>
                        </div>
                        <div class="my-4">
                            {{#each switch}}
                            <div class="my-4">
                                <div class="form-check form-switch">
                                    <label class="form-check-label {{#if isActive}}{{/if}}">{{text}}</label>
                                    <input name="food" type="checkbox" class="form-check-input">
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        <div class="my-4">
                            <hr>
                        </div>
                        {{/with}}
                    </form>
                    {{/with}}
                </div>
                <div class="col-4">
                    <div class="card mt-3">
                        <div class="card-body">
                            {{#each action_block}}
                            <div class="mt-2">
                                {{#if isSuccess}}
                                <button class="btn btn-success text-center">{{text}}</button>
                                {{/if}}
                            </div>
                            <div class="my-3">
                                {{#if isDanger}}
                                <button class="btn btn-danger text-center">{{text}}</button>
                                {{/if}}
                            </div>
                            <div class="my-3">
                                {{#if isInfo}}
                                <button class="btn btn-info text-center">{{text}}</button>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="card mt-4">
                        <div class="card-body">
                            {{#with total}}
                            <strong class="card-title">{{title}}</strong>
                            <div class="mt-3">
                                {{#each item_list}}
                                <div class="my-2">
                                    {{name}}: {{price}}
                                </div>
                                {{/each}}
                            </div>
                            <div class="my-2">
                                <hr>
                            </div>
                            <div class="mt-4">
                                {{#each additional_info}}
                                <div class="my-1">
                                    {{text}}: {{value}}
                                </div>
                                {{/each}}
                            </div>
                            <div class="my-2">
                                <hr>
                            </div>
                            <div class="mt-3">
                                {{#with total_price}}
                                <div class="my-1">
                                    {{text}}: {{value}}
                                </div>
                                {{/with}}
                            </div>
                            <div class="my-2">
                                <hr>
                            </div>
                            <div>
                                {{#each button}}
                                <div class="my-3">
                                    {{#if isPrimary}}
                                    <button class="btn btn-primary text-center">{{text}}</button>
                                    {{/if}}
                                </div>
                                <div class="my-3">
                                    {{#if isOutline}}
                                    <button class="btn btn-outline-primary text-center">{{text}}</button>
                                    {{/if}}
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>
                <div class="col-8">
                    {{#with delivery}}
                    <h2>{{title}}</h2>
                    <div class="card">
                        <div class="card-body">
                            <div>
                                {{#each select}}
                                <div>
                                    {{#with this}}
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-lg">
                                        {{#each options}}
                                        <option selected>{{placeholder}}</option>
                                        <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                        {{/with}}
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
        </section>
    </body>
</main>