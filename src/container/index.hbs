<main class="p-5">
    <div class="card mb-5">
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <h1 class="text-start">Безсмертний Андрій</h1>
                </div>
                <div class="col-6">
                    <h2 class="text-end">Resume project</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="list-group">
        <div class="list-group-title">
            <h2 class="ms-3 mb-4">Resume</h2>
            {{#with navbuttons}}
            <div class="btn-group-vertikal" role="group" aria-label="Vertical button group">
                <div class="row">
                    {{#each links}}
                    <div class="my-2">
                        <a href="{{href}}" class="btn btn-primary">{{name}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="mt-4 ms-3 mb-2">
                <h4>Pages project</h4>
            </div>
            <div class="btn-group-vertikal" role="group" aria-label="Vertical button group">
                <div class="row">
                    {{#each project}}
                    <div class="my-2">
                        <a href="{{href}}" class="btn btn-primary">{{name}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="mt-4 ms-3 mb-2">
                <h4>Pages shop</h4>
            </div>
            <div class="btn-group-vertikal" role="group" aria-label="Vertical button group">
                <div class="row">
                    {{#each shops}}
                    <div class="my-2">
                        <a href="{{href}}" class="btn btn-primary">{{name}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="mt-4 ms-3 mb-2">
                <h4>Pages task</h4>
            </div>
            <div class="btn-group-vertikal" role="group" aria-label="Vertical button group">
                <div class="row">
                    {{#each tasks}}
                    <div class="my-2">
                        <a href="{{href}}" class="btn btn-primary">{{name}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
</main>