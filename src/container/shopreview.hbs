<main class="p-5">
    <header class="row mt-3">
        <div class="col-12">
            {{#with navigation}}
            <div class="card">
                <div class="card-body m-1">
                    <ul class="nav">
                        {{#each links}}
                        <li class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                            {{/each}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </header>

    <body>
        <section class="mt-5">
            <div class="row">
                <div class="col-8 mb-5">
                    {{#with formBlock}}
                    <h1>{{header}}</h1>
                    <div class="mt-4">
                        {{#with rating}}
                        {{title}}: {{value}}
                        {{/with}}
                    </div>
                    {{!-- actionBlock --}}
                    <div class="nav nav-tabs my-5">
                        {{#each actionBlock.tabs}}
                        <div class=" nav-item mx-5">
                            <a href="#"
                                class="nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="my-5">
                        <hr>
                    </div>
                    {{!--Залиште відгук про товар--}}
                    <div class="card my-5">
                        <div class="card-body">
                            {{#with actionBlock.report}}
                            <h6 class="card-title">{{title}}</h6>
                            <div class="btn btn-secondary btn-sm col-3 my-1">
                                <a href="{{button.link}}" class="nav-link">{{button.text}}</a>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    <div class="my-5">
                        <hr>
                    </div>
                    {{!--Хочете поділитись своєю думкою про наш магазин? --}}
                    <div class="my-3">
                        {{#with feedbackBlock}}
                        <h2>{{title}}</h2>
                        <div class="mt-5">
                            {{#each buttons}}
                            {{#if isWarning}}
                            <a href="{{link}}" type="button" class="btn btn-warning ms-1" target="_blank">
                                {{text}}
                            </a>
                            {{/if}}
                            {{#if isSuccess}}
                            <a href="{{link}}" type="button" class="btn btn-success mx-3" target="_blank">
                                {{text}}
                            </a>
                            {{/if}}
                            {{#if isDanger}}
                            <a href="{{link}}" type="button" class="btn btn-danger" target="_blank">
                                {{text}}
                            </a>
                            {{/if}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                    <div class="mt-5">
                        <hr>
                    </div>
                    {{/with}}
                </div>
                {{!-- Бокова панель --}}
                <div class="col-4 mt-3">
                    {{#with formBlock.goodsInfo}}
                    <div class="card">
                        <div class="card-body">
                            <img src="{{photo}}" alt="photo" class="m-2">
                        </div>
                        <b class="mb-3 ms-4">
                            {{name}}
                        </b>
                    </div>
                    <div class="card mt-3">
                        <div class="card-body">
                            <p>{{price}}</p>
                            {{#if inMarket}}
                            Є в наявності
                            {{/if}}
                            <div class="mt-3">
                                {{#each buttons}}
                                <div>
                                    {{#if isPrimary}}
                                    <a href="{{link}}" type="button" class="btn btn-primary" target="_blank">
                                        {{text}}
                                    </a>
                                    {{/if}}
                                </div>
                                <div class="my-3">
                                    {{#if isSecondary}}
                                    <a href="{{link}}" type="button" class="btn btn-secondary" target="_blank">
                                        {{text}}
                                    </a>
                                    {{/if}}
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <div class="card-body">
                            {{#with seller}}
                            <div>{{title}}:<b class="ms-2">{{value}}</b></div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                </div>
                {{!--Відгуки --}}
                <div class="col-">
                    {{#with reviewList}}
                    {{> reviewItem}}
                    {{/with}}
                </div>
            </div>
        </section>
        <section>
            <div class="card alert alert-success">
                {{#with service}}
                <div class="text-center text-light">
                    <h2>{{title}}</h2>
                    <p class="my-3">{{description}}</p>
                    {{#each buttons}}
                    <div class="btn btn-primary col-2 my-1">
                        <a href="{{link}}" class="nav-link">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </section>
    </body>
    <div class="col-12 mt-5">
        <hr>
    </div>
    <footer>
        <div class="row">
            {{#each footer}}
            <div class="col-2 list-group">
                <ul class="nav flex-column">
                    {{#each this}}
                    <li class="nav-item my-1">
                        <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}} list-item" target="_blank">
                            {{text}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </footer>
</main>