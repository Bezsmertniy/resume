{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>
                        <br>
                        <div>
                            {{> link text=company.name href=company.url blank=true noLine=true}}

                        </div>
                        <br>
                        <br>

                        <div>
                            <strong>
                                Projects ({{projectAmount}})
                            </strong>
                        </div>
                        <br>

                        <div>
                            <ul>
                                {{#each projects}}
                                <li>
                                    {{#if url}}
                                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                    {{else}}
                                    <b>{{name}}</b>
                                    {{/if}}
                                    <br>
                                    <div>
                                        <p>{{about}}</p>
                                    </div>
                                    <br>

                                    <div>
                                        <em>Projects stacks ({{stackAmoGnt}})</em>
                                    </div>
                                    <br>
                                    <div>
                                        <ul>
                                            {{#each stacks}}
                                            <li>{{name}}</li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    <br>
                                    <div>
                                        <em>Projects awards</em>
                                    </div>
                                    <br>
                                    <div>
                                        <ul>
                                            {{#each awards}}
                                            <li>{{name}}</li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    <br>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}

</div>

