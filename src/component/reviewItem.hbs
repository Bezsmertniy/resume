{{#each this}}
<div class="card mb-4">
    <div class="card m-3">
        <div class="card-body p-0">
            <div class="card-header">
                {{#with title}}
                <h3>{{userName}}</h3>
                <p>{{caption}}</p>
                <datatime>{{date}}</datatime>
                {{/with}}
            </div>
            {{!--reviewBody --}}
            <div class="card-body">
                {{#with reviewBody}}
                <div>
                    {{seller.title}}: {{seller.value}}
                </div>
                <div class="my-3">
                    {{rating.title}}: {{rating.value}}
                </div>
                <p>{{text}}</p>
                <div>
                    <b>
                        {{advantages.title}}:
                    </b>
                    <div class="mt-2">{{advantages.text}}</div>
                </div>
                <div class="mt-3">
                    <b>
                        {{disadvantages.title}}:
                    </b>
                    <div class="mt-2">{{disadvantages.text}}</div>
                </div>
                <div class="mt-3">
                    {{#each images}}
                    <img src="{{this}}" alt="images">
                    {{/each}}
                </div>
                {{!--coments --}}
                {{#each coments}}
                <div class="card ms-4 mt-4">
                    <div class="card-body">
                        <div>
                            {{#with this}}
                            <h6>{{userName}}</h6>
                            <time>{{date}}</time>
                            <p>{{text}}</p>
                            {{/with}}
                        </div>
                    </div>
                </div>
                {{/each}}
                {{/with}}
            </div>
        </div>
    </div>
</div>
{{/each}}